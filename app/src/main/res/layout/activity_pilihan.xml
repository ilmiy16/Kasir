<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CE2C19">

    <!-- Logo -->

    <!-- Spacer agar elemen bisa naik saat ada perubahan layar -->

    <!-- Background putih -->


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="-50dp"
        android:contentDescription="Logo aplikasi Jajanan Khadijah"
        android:elevation="80dp"
        android:translationY="70dp"
        app:srcCompat="@drawable/log" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="-140dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:text="Masuk Sebagai"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#CE2C19"
            android:text="Admin"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnKasir"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="85dp"
            android:backgroundTint="#CE2C19"
            android:text="Kasir"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>